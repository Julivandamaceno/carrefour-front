@import "../../settings/*"

.crui-title
  background #fff
  color $titlecolor
  font-weight 300
  font-size 32px
  line-height 0.5
  text-align center
  position relative
  z-index 2

  span
    background #FFFFFF
    color currentColor
    font-size inherit
    position relative
    padding 0 20px
    line-height 40px

  &:before
    content ""
    background $titleborder
    position absolute
    height 1px
    top 50%
    left 0
    width 100%
    z-index 0

.crui-subtitle
  color $subtitle
  font-size 13px
  line-height 17px
  text-align center
  margin 11px auto 30px
  
  @media all and (max-width: 605px)
    width 90%
    
  @media all and (max-width: 525px)
    width 80%
  
  a
    color $subtitle
    text-decoration underline
    
    &:hover
      text-decoration none
    
.crui-subtitle__read_more
  margin-top 20px