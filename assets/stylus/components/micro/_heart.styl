@import "../../settings/*"
@import "../../tools/*"

@keyframes bounceHeart {
  0% {
    transform: scale(1);
  }

  10% {
    transform: scale(1.2);
    animation-duration: 100ms;
  }

  40% {
    transform: scale(1);
  }

  60% {
    transform: scale(1.3);
    animation-duration: 150ms;
  }

  70% {
    transform: scale(1);
  }
}

.crui-favorite
    cursor pointer
    width 31px
    height 31px
    
    &.crui-favorite__active
      animation bounceHeart .5s ease 0s forwards normal
      
      path
        stroke $highlight-color
        fill $highlight-color

    path
      transition(all linear 0.1s)
      fill #FFFFFF

    &:hover
      path
        stroke $highlight-color