@import "../settings/*"
@import "../tools/*"

.crui-vitrine
  .crui-title
    margin-bottom 30px

.crui-product
  transition(border linear 0.1s)
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border 2px solid #FFFFFF
  color $product-base-color
  display block
  text-align center
  
  .crui-favorite,
  .crui-cart
    margin 0 auto
  
  &:hover
    color $product-base-color
    border-color $product-border-hover
    text-decoration none
    
    .crui-product--actions
      opacity 1

.crui-product--image
  margin 0 auto
  width 100%
  max-width 200px
  max-height 200px

.crui-product--coupon
  border 1px solid $product-coupon-border
  display block
  color $product-base-color
  text-transform uppercase
  padding 5px 0
  margin 0 auto 17px
  font-weight 700
  font-size 11px
  width 91%
  
  &:hover
    text-decoration none

.crui-product--name
  transition(color 0.2s linear)
  font-size 13px
  color $product-base-color
  display block
  margin-bottom 13px
  overflow hidden
  height 36px
  word-wrap break-word
  width 91%
  margin 0 auto
  
  &:hover
    color $mainlinkcolor
    text-decoration none
  
.crui-product--price
  transition(color 0.2s linear)
  color $highlight-color
  display block
  font-size 12.5px
  margin-bottom 0
  
  &:hover
    color darken($highlight-color, 30%)
    text-decoration none

.crui-product--installments
  color $product-installments
  display block
  margin-bottom 20px
  font-size 12.5px
  line-height 14.3px
  
  &:hover
    text-decoration none
  
.crui-product--actions
  transition(opacity 0.2s linear)
  border-top 1px solid $product-coupon-border
  opacity 0
  display inline-block
  width 100%
  height 43px
  
.crui-product--actions--favorite,
.crui-product--actions--cart
  float left
  padding 8px 0
  width 49.6%
  
.crui-product--actions--favorite
  border-right 1px solid $product-coupon-border